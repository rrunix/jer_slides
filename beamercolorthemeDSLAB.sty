\mode<presentation>

\definecolor{gray1}{RGB}{220,220,220}
\definecolor{gray2}{RGB}{180,180,180}
\definecolor{colorblue}{RGB}{117,20,0}

\definecolor{colortitlebarslide}{RGB}{0,169,212}
\definecolor{colortitleslide}{RGB}{250,250,250}
\definecolor{colortextblock}{RGB}{5,5,145} 
\definecolor{colorbg}{RGB}{255,255,255}

\setbeamercolor{normal text}{fg=black,bg=colorbg}
\setbeamercolor{structure}{fg=colortitlebarslide}

\definecolor{devryblue}{RGB}{245,250,255}    
\setbeamercolor{background canvas}{bg=devryblue}

\setbeamercolor{alerted text}{fg=blue!85!black}

\setbeamercolor{item projected}{use=item,fg=white,bg=colortitlebarslide}

\setbeamercolor*{palette primary}{fg=colortitleslide,bg=colortitlebarslide}
\setbeamercolor*{palette secondary}{fg=colortitleslide,bg=colortitlebarslide}
\setbeamercolor*{palette tertiary}{fg=black!100!blue}
\setbeamercolor*{palette quaternary}{fg=black!1!blue}

\setbeamercolor*{sidebar}{parent=palette primary}

\setbeamercolor*{palette sidebar primary}{fg=colortitlebarslide}
\setbeamercolor*{palette sidebar secondary}{fg=blue}
\setbeamercolor*{palette sidebar tertiary}{fg=colortitlebarslide}
\setbeamercolor*{palette sidebar quaternary}{fg=blue}
\setbeamercolor{section in toc}{fg=black,bg=white}


\setbeamercolor{titlelike}{parent=palette primary,fg=white}
\setbeamercolor{framesubtitle}{fg=blue}

\setbeamercolor*{subtitle}{fg=colortitleslide}

\setbeamercolor*{block title}{fg=colortextblock}
\setbeamercolor*{block title alerted}{parent=alerted text}
\setbeamercolor*{block title example}{parent=example text}
\setbeamercolor*{block body}{}
\setbeamercolor*{block body alerted}{}
\setbeamercolor*{block body example}{}

\setbeamercolor*{titlelike}{parent=palette secondary}

\setbeamercolor*{author in head/foot}{fg=gray1,bg=colorblue}
\setbeamercolor*{title in head/foot}{fg=colorblue,bg=gray1}
\setbeamercolor*{date in head/foot}{fg=black,bg=gray2}

\setbeamercolor*{section in head/foot}{parent=palette tertiary}
\setbeamercolor*{subsection in head/foot}{parent=palette primary}

\defbeamertemplate*{frametitle}{smoothtree theme}
{%
  \nointerlineskip%
  \begin{beamercolorbox}[wd=\paperwidth,ht=1cm,leftskip=.5cm,rightskip=.3cm]{frametitle}
    \usebeamerfont*{frametitle}\raisebox{0.6ex}{\insertframetitle}\hfill\raisebox{-0.6ex}{\includegraphics[width=0.5cm]{theme_images/DSLab_logo_2.png}}
        \par\vskip-.8ex{\usebeamerfont*{framesubtitle}{\usebeamercolor[fg]{framesubtitle}\insertframesubtitle}\strut\par}%
    \usebeamerfont{headline}%
    \vskip.5ex
  \end{beamercolorbox}%
  \nointerlineskip

}






